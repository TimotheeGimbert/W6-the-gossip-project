<!DOCTYPE html>
<html>
  <head>
    <title>TheGossipProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand navbar-dark bg-dark">
        <h1 class="text-light">The Gossip Project</h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <%= link_to "Accueil", root_path, class: "text-muted" %>
            <%= link_to "Gossip Creator", new_gossip_path, class: "text-light" %>
            <%= link_to "Team", team_path, class: "text-muted" %>
            <%= link_to "Contact", contact_path, class: "text-muted" %>
          </div>
        </div>
        <form class="form-inline">
          <% if current_user %>
            <%= link_to current_user.name + ' | DÃ©connexion', session_path(session.id), method: :delete, :class => "btn btn-outline-warning mx-5" %>
          <% else %>
            <%= link_to "Connexion | Inscription", new_session_path, :class => "btn btn-outline-warning mx-5" %>  
          <% end %>
        </form>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
