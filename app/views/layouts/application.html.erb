<!DOCTYPE html>
<html>
  <head>
    <title>Le SiTe dU pOtiN</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag 'application' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-dark bg-dark p-4">
        <h2> <%= link_to "Le SiTe dU pOtiN", root_path, class:"text-light mx-4" %> </h2>
        <form class="form-inline">
          <%= link_to "Team / Contact", team_path, class: "text-muted mx-3" %>
          <% if current_user %>
            <%= link_to "RéDigEr Un pOtiN", new_gossip_path, class: "text-light mx-3" %>
            <%= link_to "MoN prOfiL", session_path(session.id), method: :delete, :class => "btn btn-outline-success mx-3" %>
            <%= link_to "Déconnexion", session_path(session.id), method: :delete, :class => "btn btn-outline-warning mx-3" %>
          <% else %>
            <%= link_to "Connexion | Inscription", new_session_path, :class => "btn btn-outline-warning" %>  
          <% end %>
        </form>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
