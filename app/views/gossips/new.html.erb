<div class="list-group-item text-center w-75 mx-auto mt-5">
  <h2 class="mb-5">CRéaTiOn d'uN PoTiN</h2>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="gossip-creation__title"> 
      <%= label_tag 'Titre' %>
      <%= text_field_tag 'title', @gossip.title %>
    </div>
    <div class="gossip-creation__content"> 
      <%= label_tag 'Contenu' %>
      <%= text_area_tag 'content', @gossip.content %>
    </div>
    <div class="gossip-creation__submit-button">
      <%= submit_tag "CRéeR le PoTiN" %>
    </div>
  <% end %>
</div>